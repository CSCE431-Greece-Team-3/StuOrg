<tbody>
	<% @products.each do |product| %>
		<div class="card">
	
			<div id="prodinfo">
				<%= product.title %>
			</div>

			<div id="prodinfo">
				<%= image_tag product.image.variant(
					format: :png,
					resize_and_pad: [200, 200, gravity: 'north', background: :transparent]
				) %>
			</div>

			<div id="prodinfo">
				<%= "Price: $" + product.price.to_s %>
			</div>

