<% provide(:title, "Edit user") %>
<span style = "color:white"><h2>Edit Existing User Account</h2>

<%= form_for @user do |f| %>

    <%= f.label :"Organization Name:" %>
    <%= f.text_field :first %><br>

    <%= f.label :"Username:" %>
    <%= f.email_field :username %><br>

    <%= f.label :"Password:" %>
    <%= f.password_field :password %></span><br>

    <%= f.submit "Save changes", class: "btn btn-primary" %>

<% end %>

<td><%= button_to 'Delete Account', '/deleteprofile', method: :delete, data: {confirm: "Are you sure?"} %></td>

<%= link_to 'Back', dashboard_path %>