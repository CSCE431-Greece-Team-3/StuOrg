<div id="login-box" class=" h-100 justify-content-center align-items-center">
    <h2 class="container text-center">Create an Account</h2>

    <%= form_for @user do |f| %>
        <div id="login-field" class="form-group">
            <%= f.label :"Username:" %>
            <%= f.text_field :username %><br>
        </div>

        <div id="login-field" class="form-group">
            <%= f.label :"Password:" %>
            <%= f.password_field :password %><br>
        </div>
        <button id="login-submit" class="container text-center btn btn-default">
            <span visibility: hidden><%= f.submit "Create Account"%></span>
            <span class="button__text" class="container text-center">Create Account</span>
        </button>

    <% end %>

    <br>

	<span id="err-msg" class="container text-center">
		<% flash.each do |type, msg| %>
			<div>
				<%= msg %>
			</div>
		<% end %>
	</span>

</div>
