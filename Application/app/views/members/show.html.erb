<p id="notice"><%= notice %></p>

<h1><span style = "color:white">Howdy</span></h1>
<% if logged_in_member? %>
    <h1><span style = "color:white">You are Logged In, <%= current_member.first %></span></h1>
    <h2><span style = "color:white">You are not currently part of any organizations</span></h2>
<%end%>

<td><%= button_to 'Edit Profile', '/edit_member_profile', method: :get %></td>
<td><%= button_to 'Delete Account', '/delete_member_profile', method: :delete, data: {confirm: "Are you sure?"} %></td>
<td><%= button_to 'Logout', logout_path, :method => :delete %></td>