<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th>First</th>
      <th>Last</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.username %></td>
        <td><%= member.first %></td>
        <td><%= member.last %></td>
        <td><%= button_to 'Show Product', member, method: :get %></td>
          <td><%= button_to 'Edit Product', edit_member_path(member), method: :get %></td>
          <td><%= button_to 'Delete Product', member_path(member), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>